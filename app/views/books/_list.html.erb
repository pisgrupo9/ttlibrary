<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.year %></td>
        <td><%= book.ISBN %></td>

        <td><%= link_to 'Show',  author_book_path(book.author, book), class: "lato-font link" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
